{
  "name": "demo-monorepo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "turbo dev --parallel --continue",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "release": "turbo release --concurrency=1",
    "version:ci:norelease": "lerna version --yes --conventional-commits"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@lerna-lite/cli": "^3.3.0",
    "@lerna-lite/version": "^3.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "turbo": "^1.10.12"
  },
  "lint-staged": {
    "apps/*/src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
